@using ETMS.Models;
@model IEnumerable<Employee>
<script type="text/javascript">
    
  //  $(document).ready(function () {
        function GetList() {
            var v=document.getElementById('name').value;
            $.ajax({
                url: "http://localhost:4000/api/GetEmployees/GetMatchedEmp?json=true&name="+v,
                type: 'GET',
                dataType: 'json',
                success: function (data) {
                    var output = "<ul>";
                    for (var i in data) {
                        output += "<li>" + data[i].FirstName +"</li>";                        
                    }
                    output += "</ul>";
                   
                    document.getElementById('placeholder').innerHTML = output;
                },
                error: function (x, y, z) {
                    alert(x + '\n' + y + '\n' + z);
                }
            });            
           
           // alert(v);
       }
   // });
  </script>
               
<div class="grid_4" style="margin-left: 290px;width: 520px">
				<div class="block-border">
					<div class="block-header">
