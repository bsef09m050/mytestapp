@model ETMS.Models.Project

            <div class="grid_4" style="width: 600px;margin-left: 310px">
				<div class="block-border">
					<div class="block-header">
						<h1>Delete Project Information</h1><span></span>
					</div>
					<form id="validate-form" class="block-content form" method="post">
                        <input type="hidden" name="PId" value="@Model.PId" />
						<p class="inline-mini-label">
							<label for="title" >Title</label>
                            <input type="text" name="PName" class="required" value="@Model.PName">
						</p>
                        <p class="inline-mini-label">
							<label for="title">Start Date</label>
                            <input type="text" name="PStartDate" class="required" value="@Model.PStartDate">
						</p>
                        <p class="inline-mini-label">
							<label for="title" >End Date</label>
                            <input type="text" name="PEndDate" class="required" value="@Model.PEndDate">
						</p>
                        <p class="inline-mini-label">
							<label for="title" >Team Lead</label>
                            <input type="text" name="PTeamLead" class="required" value="@Model.PTeamLead">
						</p>
                        <p class="inline-mini-label">
							<label for="category">Category</label>
							<select name="PCategory" id="category">
                                <option selected>@Model.PCategory</option>
								<option>Web Development</option>
								<option>Android</option>
								<option>Iphone</option>
                                <option>Management System</option>
							</select>
						</p>
                        
						<div class="clear"></div>
						
						<!-- Buttons with actionbar  -->
						<div class="block-actions">
							<ul class="actions-left">
								<li><a class="button red" id="reset-validate-form" href="@Href("~/Project/ViewProjects")">Cancel</a></li>
							</ul>
							<ul class="actions-right">
								<li><input type="submit" class="button" value="Delete" style="width:65px"></li>
							</ul>
						</div> <!--! end of #block-actions -->
					</form>
				</div>
			</div>
